<Window x:Class="SortingAlgorithmVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortingAlgorithmVisualizer"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        KeyDown="Window_KeyDown"
        ContentRendered="Window_ContentRendered"
        Title="MainWindow" Height="500" Width="500">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SortingAlgorithmVisualizer;component/RessourceDictionaries/ButtonDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Canvas Name="canvas">

        </Canvas>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="startButton" Click="Button_Click" ToolTip="Start the animation">
                <Path Height="30" Width="30" Stroke="#2ecc71" Stretch="Uniform" Fill="#27ae60" 
                      StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                    <Path.Data>
                        <PathGeometry Figures="M 0 0 L 0 13 L 10 6 Z"/>
                    </Path.Data>
                </Path>
            </Button>

            <Button Name="pauseButton" Click="pauseButton_Click" ToolTip="Pause/Resume the animation">
                <Path Height="30" Width="30" Stroke="#34495e" Stretch="Uniform" Fill="#2c3e50" 
                      StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                    <Path.Data>
                        <PathGeometry Figures="M 0 0 L 2 0 L 2 7 L 0 7 Z M 3 0 L 5 0 L 5 7 L 3 7 Z"/>
                    </Path.Data>
                </Path>
            </Button>

            <Button Name="abortButton" Click="abortButton_Click" ToolTip="abort the animation">
                <Path Height="30" Width="30" Stroke="#e74c3c" Stretch="Uniform" Fill="#c0392b" 
                      StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                    <Path.Data>
                        <PathGeometry Figures="M 0 0 L 5 0 L 5 5 L 0 5 Z"/>
                    </Path.Data>
                </Path>
            </Button>
        </StackPanel>
    </Grid>
</Window>